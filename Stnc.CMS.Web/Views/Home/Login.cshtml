@model AppUserSignInDto
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_StandartLayout.cshtml";
    //https://bootsnipp.com/snippets/vl4R7
}
<div class="container" style="margin-top: 160px;">
    <div class="row  mb-5 justify-content-center text-left">

        <div class="col-lg-8 d-none d-lg-block">
            <form asp-action="GirisYap" method="post" class="mt-5 w-50 mx-auto p-4 shadow">
                <div class="form-group">
                    <label asp-for="UserName">Kullanıcı Adı :</label>
                    <span asp-validation-for="UserName" class="text-danger"></span>
                    <input asp-for="UserName" value="selman" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Password">Şifre :</label>
                    <span asp-validation-for="Password" class="text-danger"></span>
                    <input type="password" value="1" asp-for="Password" class="form-control" />
                </div>
                <div class="form-check">
                    <input type="checkbox" asp-for="RememberMe" class="form-check-input" />
                    <label asp-for="RememberMe" class="form-check-label">Beni Hatırla</label>
                </div>
                <div asp-validation-summary="ModelOnly" class="text-danger">

                </div>

                <input type="submit" class="btn btn-info btn-sm" value="Giriş Yap" />

                <a asp-action="KayitOl" class="btn btn-warning btn-sm">Kayıt Ol</a>
            </form>
        </div>
    </div>
</div>
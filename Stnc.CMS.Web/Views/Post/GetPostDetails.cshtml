
@{
    ViewData["Title"] = Model.PostTitle;
    Layout = "~/Views/Shared/_StandartLayout.cshtml";
}



<div class="site-section ftco-subscribe-1 site-blocks-cover pb-4" style="background-image: url('/images/bg_1.jpg')">
    <div class="container">
        <div class="row align-items-end">
            <div class="col-lg-7">
                <h2 class="mb-0">  @Html.Raw(Model.PostTitle)</h2>

            </div>
        </div>
    </div>
</div>

<div class="custom-breadcrumns border-bottom">
    <div class="container">
        <a href="/">Anasayfa</a>
        <span class="mx-3 icon-keyboard_arrow_right"></span>
        <a href="#">İçerikler</a>
        <span class="mx-3 icon-keyboard_arrow_right"></span>
        <span class="current">@Html.Raw(Model.PostTitle)</span>
    </div>
</div>

<section class="blog_area single-post-area section-padding">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 posts-list">
                <div class="single-post">


                    @if (Model.Picture != null)
                    {
                        <div class="feature-img">
                            <img class="img-fluid" src="~/upload/img/@Model.Picture" alt="">
                        </div>
                    }

                    <div class="blog_details">
                        <h2>
                            @Html.Raw(Model.PostTitle)
                        </h2>
                        <ul class="blog-info-link mt-3 mb-4">
                            <li><a href="#"><i class="fa fa-user"></i> İçerik</a></li>
                            <li><a href="#"><i class="fa fa-clock"></i> @Model.CreatedAt.ToString("dd-MM-yyyy")</a></li>
                        </ul>

                        <p>
                            @Html.Raw(Model.PostContent)
                        </p>
                    </div>
                </div>
                <div class="navigation-top">
                    <div class="d-sm-flex justify-content-between text-center">
                        <p class="like-info">
                            <span class="align-middle"><i class="fa fa-clock"></i></span>  @Model.CreatedAt.ToString("dd-MM-yyyy")
                        </p>
                        <div class="col-sm-4 text-center my-2 my-sm-0">

                        </div>
                        <ul class="social-icons">
                            <li><a href="#"><i class="fa fa-facebook-f"></i></a></li>
                            <li><a href="#"><i class="fa fa-twitter"></i></a></li>
                            <li><a href="#"><i class="fa fa-dribbble"></i></a></li>
                            <li><a href="#"><i class="fa fa-behance"></i></a></li>
                        </ul>
                    </div>
                    <div class="navigation-area">
                        <div class="row">
                            <div class="col-lg-6 col-md-6 col-12 nav-left flex-row d-flex justify-content-start align-items-center">
                                <div class="thumb">
                                    <a href="#">
                                        <img class="img-fluid" src="/images/preview.webp" alt="">
                                    </a>
                                </div>
                                <div class="arrow">
                                    <a href="#">
                                        <span class="lnr text-white ti-arrow-left"></span>
                                    </a>
                                </div>
                                <div class="detials">
                                    <p>Önceki İçerik</p>
                                    <a href="#">
                                        <h4>vekil ataması </h4>
                                    </a>
                                </div>
                            </div>
                            <div class="col-lg-6 col-md-6 col-12 nav-right flex-row d-flex justify-content-end align-items-center">
                                <div class="detials">
                                    <p>Sonraki İçerik</p>
                                    <a href="#">
                                        <h4>Fare Satışı</h4>
                                    </a>
                                </div>
                                <div class="arrow">
                                    <a href="#">
                                        <span class="lnr text-white ti-arrow-right"></span>
                                    </a>
                                </div>
                                <div class="thumb">
                                    <a href="#">
                                        <img class="img-fluid" src="/images/next.webp" alt="">
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                @*@await Html.PartialAsync("CommetAuthor")*@


            </div>
            <div class="col-lg-4">
                <div class="blog_right_sidebar">
                    <aside class="single_sidebar_widget search_widget">
                        <form action="#">
                            <div class="form-group">
                                <div class="input-group mb-3">
                                    <input type="text" class="form-control" placeholder="Ara" onfocus="if (!window.__cfRLUnblockHandlers) return false; this.placeholder = ''" onblur="if (!window.__cfRLUnblockHandlers) return false; this.placeholder = 'Ara'">
                                    <div class="input-group-append">
                                        <button class="btn" type="button"><i class="ti-search"></i></button>
                                    </div>
                                </div>
                            </div>
                            <button class="button rounded-0 primary-bg text-white w-100 btn_1 boxed-btn" type="submit">Ara</button>
                        </form>
                    </aside>
                    <aside class="single_sidebar_widget post_category_widget">
                        <h4 class="widget_title">Kategoriler</h4>
                        <ul class="list cat-list">
                            <li>
                                <a href="#" class="d-flex">
                                    <p>Resaurant food</p>
                                    <p>(37)</p>
                                </a>
                            </li>
                            <li>
                                <a href="#" class="d-flex">
                                    <p>Travel news</p>
                                    <p>(10)</p>
                                </a>
                            </li>
                            <li>
                                <a href="#" class="d-flex">
                                    <p>Modern technology</p>
                                    <p>(03)</p>
                                </a>
                            </li>
                            <li>
                                <a href="#" class="d-flex">
                                    <p>Product</p>
                                    <p>(11)</p>
                                </a>
                            </li>
                            <li>
                                <a href="#" class="d-flex">
                                    <p>Inspiration</p>
                                    <p>(21)</p>
                                </a>
                            </li>
                            <li>
                                <a href="#" class="d-flex">
                                    <p>Health Care</p>
                                    <p>(21)</p>
                                </a>
                            </li>
                        </ul>
                    </aside>

                    <aside class="single_sidebar_widget popular_post_widget">
                        <h3 class="widget_title">Benzer Haberler</h3>
                        <div class="media post_item">
                            <img src="/images/next.webp" alt="post">
                            <div class="media-body">
                                <a href="single-blog.html">
                                    <h3>Hayvan Siparişleri</h3>
                                </a>
                                <p>12 ocak 2020</p>
                            </div>
                        </div>
                        <div class="media post_item">
                            <img src="/images/preview.webp" alt="post">
                            <div class="media-body">
                                <a href="single-blog.html">
                                    <h3>Misyonumuz</h3>
                                </a>
                                <p>5 saat önce</p>
                            </div>
                        </div>
                        <div class="media post_item">
                            <img src="/images/next.webp" alt="post">
                            <div class="media-body">
                                <a href="single-blog.html">
                                    <h3>Üyelik ve sipariş sistemi yapıldı</h3>
                                </a>
                                <p>3 saat önce</p>
                            </div>
                        </div>
                        <div class="media post_item">
                            <img src="/images/preview.webp" alt="post">
                            <div class="media-body">
                                <a href="single-blog.html">
                                    <h3> Formlar </h3>
                                </a>
                                <p>15 Haziran 2020</p>
                            </div>
                        </div>
                    </aside>

                </div>
            </div>
        </div>
    </div>
</section>

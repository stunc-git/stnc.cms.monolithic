@model Stnc.CMS.DataAccess.ShoppingCartLib.ShoppingCartIndex
@using System.Globalization
@{ ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml"; }


<div class="row checkoutForm" style="margin-bottom:250px;">
    <div style="background-color:rgba(248,248,248,0.6);">
        <h2>
            Your shopping cart
            <br />Here are the products in your shopping cart.
        </h2>
    </div>
    <form asp-controller="ShoppingCart" asp-action="Add" method="get" class="form-horizontal" role="form">
        <input value="Add to cart" type="submit" class="btn btn-success" asp-controller="ShoppingCart" asp-action="Add" asp-route-id="3" asp-route-amount="50" asp-route-returnUrl="@Context.Request.Path" />
    </form>
        <table class="table table-hover table-dark table-stripped table-bordered">
            <thead>
                <tr>
                    <th>Selected amount</th>
                    <th>Product</th>
                    <th class="text-right">Price</th>
                    <th class="text-right">Subtotal</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var line in Model.ShoppingCart.StShoppingCartItems)
                {
    <tr>
        <td class="text-center">@line.Amount</td>
        <td class="text-left"><a class="btn btn-info" asp-controller="Food" asp-action="Index" asp-route-id="@line.Cart.Id">@line.Cart.Name</a></td>
        <td class="text-right">@line.Cart.Price.ToString("c", CultureInfo.CreateSpecificCulture("en-US"))</td>
        <td class="text-right">
            @((line.Amount * line.Cart.Price).ToString("c",CultureInfo.CreateSpecificCulture("en-US")))
        </td>
        <td class="text-center">
            <a class="glyphicon glyphicon-remove text-danger remove" asp-controller="ShoppingCart"
               asp-action="Remove" asp-route-foodId="@line.Cart.Id"></a>
        </td>
    </tr>}
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="3" class="text-right">Total:</td>
                    <td class="text-right">
                        @(Model.ShoppingCartTotal.ToString("c",CultureInfo.CreateSpecificCulture("en-US")))
                    </td>
                </tr>
            </tfoot>
        </table>
        @if (ViewBag.InvalidAmountText != null)
        {
<div>
    <p class="invalidAmount">@ViewBag.InvalidAmountText</p>
</div>}
        <div>
            <a class="btn btn-back" asp-action="Back">Back</a>
        </div>
        @if (Model.ShoppingCart.StShoppingCartItems.Count() != 0)
        {
<div class="text-right" style="float:right">
    <div class="btn-group ">
        <a class="btn btn-success" asp-controller="Order" asp-action="Checkout">Check out</a>
    </div>
</div> }
else
{
<p>Your cart is empty, add some items to order them</p>}
</div>


@model SliderUpdateDto
@{
    ViewData["Title"] = "EklePost";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<form asp-action="UpdateSlider" method="post" style="margin: 0; padding: 0; width: 100%;" enctype="multipart/form-data">

    <div class="col-md-9 float-left">

        <div class="card card-primary">
            <div class="card-header">
                <h3 class="card-title">Slider Ekleme [Genel Bilgiler]</h3>
            </div>
            <!-- /.card-header -->
            <!-- form start -->
            <div class="card-body">

                <div class="form-group">
                    <label>Ad :</label>
                    <span asp-validation-for="Caption" class="text-danger"></span>
                    <input type="text" asp-for="Caption" class="form-control" />
                </div>
                <div class="form-group">
                    <label> Slider Yazısı :</label>
                    <span asp-validation-for="@Model.Excerpt" class="text-danger"></span>
                    <textarea asp-for="Excerpt" class="form-control"></textarea>
                </div>
            </div>
            <!-- /.card-body -->
        </div>
    </div>
    <div class="col-md-3 float-left">
        <div class="card card-primary">
            <div class="card-header">
                <h3 class="card-title"> [Genel Bilgiler 2]</h3>
            </div>
            <!-- /.card-header -->
            <!-- form start -->
            <div class="card-body">
                <div class="form-group">
                    <div class="row">

                        <div class="col-md-4">
                            <div>
                                <h5 class="text-center">Şu an ki resminiz:</h5>
                                <img src="~/upload/img/@Model.Picture" class="w-100" style="height:10rem!important;" alt="@Model.Caption" />
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div id="alanOnizleme" style="display:none!important;">
                                <h5 class="text-center">Seçtiğiniz resim:</h5>
                                <img id="resimOnizleme" src="" class="w-100" style="height:10rem!important;" />
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="exampleInputFile">Resim Ekle</label>
                            <div class="input-group">
                                <div class="custom-file">
                                    <input type="file" asp-for="Picture" class="custom-file-input" />

                                    <label class="custom-file-label" for="Picture"></label>
                                    <span asp-validation-for="@Model.Picture" class="text-danger"></span>
                                </div>

                            </div>
                        </div>
                    </div>
                    <!-- /.card-body -->

                    <div class="card-footer">
                        <button type="submit" class="btn btn-primary"><i class="fas fa-check mr-2"></i>Kaydet</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
@section JavaScript{
    <script src="~/lib/jqueryValidate/jquery.validate.min.js"></script>
    <script src="~/lib/jqueryUnob/jquery.validate.unobtrusive.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $("#Picture").change(function (e) {

                $("#alanOnizleme").show();
                $("#resimOnizleme").attr('src', URL.createObjectURL(e.target.files[0]));
            });
        });
    </script>

}
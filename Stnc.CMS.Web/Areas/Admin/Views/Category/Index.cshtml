@model List<CategoryListDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}



@if (Model.Count != 0)
{
    <a asp-action="AddCategory" asp-controller="Category" class="btn btn-sm btn-outline-dark my-2"> <i class="fas fa-plus-circle mr-2"></i> Yeni Kategori Ekle</a>

    <table class="table table-sm table-hover">
        <thead>
            <tr>
                <th>Kategorİ adı</th>
                <th>İşlem</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>
                        <a asp-action="UpdateCategory" asp-controller="Category" asp-route-id="@item.Id" class="btn btn-warning btn-sm"><i class="far fa-edit mr-2"></i>Düzenle</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="text-center mt-4">
        <p class="lead">
            Sistemde kayıtlı kategori durumu bulanamadı.
        </p>
        <a asp-action="AddCategory" asp-controller="Category" class="btn btn-sm btn-info my-2">Yeni Categori Ekle</a>

    </div>

}


